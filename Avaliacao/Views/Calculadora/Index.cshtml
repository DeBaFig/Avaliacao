@model Avaliacao.Models.NumberModel
@{
    ViewBag.Title = "Calculadora";
}
<div class="text-center p-4 ">
    <h1 style="text-transform:uppercase">Calculadora</h1>
</div>
@using (Html.BeginForm("Index", "Calculadora", FormMethod.Post, new { @class = "row d-flex align-items-center mx-auto w-50" }))
{
    <div class="form-group col mb-3">

        @Html.TextBoxFor(m => m.Num1, new { @Value="", @class = "form-control" })
    </div>
    <div class="form-group col mb-3">
        @Html.TextBoxFor(m => m.Operacao, new { @Value = "+", @class = "form-control" })
    </div>
    <div class="form-group col mb-3">
        @Html.TextBoxFor(m => m.Num2, new { @Value = "", @class = "form-control" })
    </div>
    <div class="form-group col mb-3">
        <input type="submit" value="Calcular" class="btn btn-primary" />
    </div>
}
@ViewBag.Message


