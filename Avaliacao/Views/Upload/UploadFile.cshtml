
@{
    ViewBag.Title = "UploadFile";
}
<div class="container">
    <div class="text-center p-4 ">
        <h1 style="text-transform:uppercase">Upload txt</h1>
    </div>
    @using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row d-flex align-items-center mx-auto w-50" }))
    {
        <div class="form-group col mb-3">
            @Html.TextBox("file", "", new { accept = ".txt ", type = "file", @class = "form-control" } ) <br />
        </div>
        <div class="form-group col mb-3">
            <input type="submit" value="Upload" class="btn btn-primary" />
        </div>
    }
</div>


